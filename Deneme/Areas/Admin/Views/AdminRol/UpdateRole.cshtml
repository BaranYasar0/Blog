@using Deneme.Areas.Admin.Models

@model RoleUpdateViewModel

@{
    ViewData["Title"] = "UpdateRole";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Rol Düzenleme Sayfası</h1>

<form method="post">
    <div class="form-group">
        <label class="form-label">Role ID</label>
        <input type="text" name="Id" value="@Model.Id" class="form-control"/>

        <label class="form-label">Role İsim</label>
        <input type="text" name="Name" value="@Model.Name" class="form-control"/>
    </div>
    
    <button class="btn btn-success">Güncelle</button>
</form>

