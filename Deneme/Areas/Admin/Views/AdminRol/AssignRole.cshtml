

@model List<RoleAssignViewModel>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<form method="post">
    @for(int i=0;i<Model.Count;i++){
        <div class="form-check">
            <input type="hidden" class="form-control" asp-for="@Model[i].RoleID" />
            <input type="hidden" class="form-control" asp-for="@Model[i].Name" />
            <input type="checkbox" class="form-control" asp-for="@Model[i].Exists" class="form-check-input" />
            <label class="form-check-label" for="@Model[i].Exists">@Model[i].Name</label>
        </div>
    }
<br />
    <button class="btn btn-info">Değişikleri Kaydet</button>
</form>
