@using EntityLayer.Concrete

@model List<Blog>
@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h2>Yazarın Blogları</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Blog Baslıgı</th>
        <th>Oluşturma Tarihi</th>
        <th>Kategori</th>
        <th>Durumu</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
        @foreach (var item in Model)
        {
        <tr>
            <tH>@item.BlogId</tH>
            <td>@item.BlogTitle</td>
            <td>@(((DateTime)item.BlogCreateDate).ToString("dd-MMM-yyyy"))</td>
            <td>@item.Category.CategoryName</td>
            @if(item.BlogStatus==true){
                <td>Aktif</td>
            }
            else{
            <td>Pasif</td>
            }
            <td><a href="/BlogController1/DeleteBlog/@item.BlogId" onclick="return confirm('Silmek istediğine emin misin?');" class="btn btn-danger">Sil</a></td>
            <td><a href="/BlogController1/EditBlog/@item.BlogId" class="btn btn-warning">Düzenle</a></td>
        </tr>
        }

</table>
<a href="#" class="btn btn-info">Yeni Blog Oluştur</a>
